<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.scorekeeper.MainActivity"
    android:background="@drawable/photoabstract">
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:textColor="@color/violet"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/edit_text_game" />
    <TextView
        android:id="@+id/instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/instruction"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:textStyle="bold|italic"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/welcome"/>
    <TextView
        android:id="@+id/rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rules"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        android:textColor="@color/grey"
        android:layout_margin="26dp"
        android:layout_below="@+id/instruction"
        android:layout_alignParentStart="true" />
    <!--Player-->
    <Button
        android:id="@+id/button_player"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/player"
        android:textColor="@color/red"
        android:layout_below="@+id/rules"
        android:layout_alignStart="@+id/welcome"
        android:onClick="setPlayer"
        android:textSize="16sp"
       />
    <EditText
        android:id="@+id/edit_text_player1"
        android:hint="@string/player1"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:background="@color/black"
        android:paddingTop="0dp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/edit_text_team1"
        android:layout_alignBottom="@+id/edit_text_team1"
        android:layout_alignEnd="@+id/button_player" />
    <EditText
        android:id="@+id/edit_text_player2"
        android:hint="@string/player2"
        android:textColorHint="@color/grey"
        android:paddingTop="0dp"
        android:textSize="14sp"
        android:background="@color/black"
        android:textColor="@color/grey"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_below="@+id/edit_text_player1"
        android:layout_alignEnd="@+id/button_player"
        android:layout_marginTop="10dp"/>
    <!--TEAM-->
    <Button
        android:id="@+id/button_team"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/team"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:onClick="setTeam"
        android:layout_below="@+id/rules"
        android:layout_alignStart="@+id/edit_text_team1" />
    <EditText
        android:id="@+id/edit_text_team1"
        android:hint="@string/team1"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:background="@color/black"
        android:paddingTop="0dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_below="@+id/button_team"
        android:layout_alignStart="@+id/edit_text_team2" />
    <EditText
        android:id="@+id/edit_text_team2"
        android:hint="@string/team2"
        android:textColorHint="@color/grey"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:background="@color/black"
        android:paddingTop="0dp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:visibility="invisible"
        android:layout_above="@+id/edit_text_game"
        android:layout_alignEnd="@+id/welcome" />

    <EditText
        android:id="@+id/edit_text_game"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:textSize="14sp"
        android:textColor="@color/grey"
        android:hint="@string/game"
        android:background="@color/black"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/edit_text_player2"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/start_counter"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="@string/start"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
